CREATE TRIGGER "HANA_WORKSHOP_<group_number>"."workshop.exercises.g<group_number>.data/add_update_price_to_log"
    AFTER UPDATE ON "HANA_WORKSHOP_<group_number>"."workshop.exercises.g<group_number>.data::Product.Products" 
    REFERENCING NEW ROW newrow, OLD ROW oldrow FOR EACH ROW
 BEGIN

   declare lv_price_difference decimal(15,2) := 0;
   if :oldrow.price <> :newrow.price then
    
      lv_price_difference := :newrow.price - :oldrow.price;
 
      INSERT INTO "HANA_WORKSHOP_<group_number>"."workshop.exercises.g<group_number>.data::Product.ProductLog" 
    VALUES(:newrow.PRODUCTID,  (select IFNULL(MAX(logid), 0) + 1 from
"HANA_WORKSHOP_<group_number>"."workshop.exercises.g<group_number>.data::Product.ProductLog" where productid = :newrow.PRODUCTID), 
now(), CURRENT_USER,  :newrow.PRODUCTID || ' has been updated with price difference of ' || to_decimal(lv_price_difference, 15, 2));
   end if;

 END;
